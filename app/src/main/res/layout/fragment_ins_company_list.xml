<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="10dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    tools:context=".InsCompanyList">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:foregroundGravity="center"
                app:cardCornerRadius="45dp"
                app:cardElevation="16dp">

                <ImageView
                    android:id="@+id/companyLogo_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/company_logo_pic"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_pending_black_24dp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/CompanyInsuranceName_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_weight="0.9"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#020202"
                tools:text="CompanyName" />

            <ImageView
                android:id="@+id/viewMore_Icon"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center|center_vertical"
                android:contentDescription="@string/view_more_icon"
                android:src="@drawable/baseline_keyboard_arrow_right_black_24dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>