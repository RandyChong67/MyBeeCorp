<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/no_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.1"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:textColor="#020202"
                tools:ignore="RtlCompat"
                tools:text="1." />

            <TextView
                android:id="@+id/CompanyInsuranceName_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.9"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#020202"
                tools:text="XXX - Insurance Name" />

            <ImageView
                android:id="@+id/viewMore_Icon"
                android:layout_width="53dp"
                android:layout_height="40dp"
                android:layout_gravity="center|end"
                android:contentDescription="@string/view_more_icon"
                android:src="@drawable/baseline_keyboard_arrow_right_black_24dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>